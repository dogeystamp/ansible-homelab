	admin off

	servers :443 {
		listener_wrappers {
			proxy_protocol {
				allow {{ bastion_vpn_ip }}/32
				fallback_policy reject
			}
		}
	}
	servers :80 {
		listener_wrappers {
			proxy_protocol {
				allow {{ bastion_vpn_ip }}/32
				fallback_policy reject
			}
		}
	}
}

